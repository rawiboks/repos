@model Inventory_System.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    @*<div class="container">*@
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <img src="@Url.Content(Model.Picture)" alt="product_Picture" class="img-responsive" />
        </div>
        <div class="col-md-4"></div>
    </div>

    <div class="row">
        <div class="col"></div>
        <div class="col">
            <table class="table ">
                <tr>
                    <th>@Model.Name</th>
                    <th>Barcode: @Model.Bardcode</th>
                    <th>Created: @Model.DateCreated.ToString("dd/MM/yyyy")</th>
                </tr>
            </table>
        </div>
        <div class="col"></div>
    </div>

    <div class="row">
        <div class="col-4"></div>
        <div class="col">
            <input type="text" id="searchMin" name="searchMin" />
            <input type="text" id="searchMax" name="searchMax" />
        </div>
    </div>

    <div class="row">
        <div class="col-4"></div>
            <div class="col">
                <button type="submit" @*formaction=@Url.Action("DetailSearch")*@ formmethod="post">Search</button>
        </div>
    </div>

    <div class="form-group">

        <div class="form-row col-6">
            <input type="text" class="form-control" id="id" name="id" value="@Model.Id" />
        </div>

        <div class="form-row">
            <div class="col-4"></div>

            <div class="col-1">
                <label for="">Add/Remove</label>
            </div>

            <div class="col-1">
                <input type="text" class="form-control" id="Quantity" name="Quantity" />
            </div>

            <div class="col-1">
                @*<button type="submit" formmethod="post">Submit</button>*@
                <button type="submit" formaction=@Url.Action("AddTransaction") formmethod="post">Submit</button>
            </div>

        </div>
    </div>


        <div class="row">
            <div class="col"></div>
            <div class="col">
                <table class="table table-striped">

                    <thead class="thead-light">
                        <tr>
                            <th>Current Balance: @ViewBag.Balance</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tr>
                        <th>Date</th>
                        <th>In/Out</th>
                        <th>Quantity</th>
                    </tr>



                    @foreach (var transaction in ViewBag.Transactions)
    {
                <tr>
                    <th>@transaction.TransactionDate</th>
                    <th>
                        @if (transaction.Quantity > 0)
        {
                <div>In</div>
}
else
{
                <div>Out</div>
}
                    </th>
                    <th>@transaction.Quantity</th>
                </tr>
}

                </table>
            </div>
            <div class="col"></div>
        </div>
        @*</div>*@
</form>

